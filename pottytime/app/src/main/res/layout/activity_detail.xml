<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context=".MainActivity"
    android:id="@+id/layout_detail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#4CAF50"
        android:id="@+id/layout_header">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/view_cancel"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/arrow_back_white"
            android:padding="12dp"
            android:layout_marginLeft="4dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/view_done"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/check_white"
            android:padding="12dp"
            android:layout_marginRight="4dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:id="@+id/layout_location">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/view_map"
            android:layout_gravity="center"
            android:src="@drawable/ibm"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="79dp"
            android:id="@+id/view_top"
            android:layout_gravity="top"
            android:background="@drawable/map_top_darken" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="79dp"
            android:id="@+id/view_bottom"
            android:layout_gravity="bottom"
            android:background="@drawable/map_bottom_darken" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armonk, NY"
            android:id="@+id/text_location"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="34sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="76Â°F"
            android:id="@+id/text_weather"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="34sp"
            android:textColor="#ffffffff" />

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/layout_stool">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/view_stool"
            android:src="@drawable/stool"
            android:scaleType="fitCenter"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:alpha="0.30" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:id="@+id/layout_stool_field">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A sausage with cracks on its surface"
                android:id="@+id/text_stool"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_stool_divider"
                android:layout_marginTop="8dp"
                android:background="#1f000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/layout_urine">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/view_urine"
            android:src="@drawable/urine_green"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:id="@+id/layout_urine_field">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transparent yellow"
                android:id="@+id/text_urine"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_urine_divider"
                android:layout_marginTop="8dp"
                android:background="#4CAF50" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/layout_rating" >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/view_rating"
            android:src="@drawable/rating"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:scaleType="fitCenter"
            android:alpha="0.30" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:id="@+id/layout_rating_field"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:id="@+id/text_rating"
                android:textColor="#4d000000"
                android:textSize="16sp"
                android:paddingTop="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_rating_divider"
                android:layout_marginTop="8dp"
                android:background="#1f000000" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_spacer"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/layout_summary">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="General summary about health conditions based on selections."
            android:id="@+id/text_summary"
            android:textColor="#ff000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16dp"
            android:padding="16dp"
            android:background="#f5f5f5"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>